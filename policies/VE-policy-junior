# Junior Level Policy
# List auth methods
path "VE/auth/*"
{
  capabilities = ["list"]
}

# List auth methods
path "VE/sys/auth"
{
  capabilities = ["read"]
}

# List ACL policies
path "VE/sys/policies/acl"
{
  capabilities = ["list"]
}

# List enabled secrets engines
path "VE/sys/mounts"
{
  capabilities = ["read", "list"]
}

# List key/value secrets at secret/
path "VE/secret/*"
{
  capabilities = ["read", "list"]
}

# Read health checks
path "VE/sys/health"
{
  capabilities = ["read"]
}